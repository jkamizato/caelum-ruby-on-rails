<h1>Exibindo Restaurante</h1>

<p>
  <b>Nome: </b>
  <%= @restaurante.nome %>
</p>
<p>
  <b>Endereço</b>
  <%= @restaurante.endereco %>
</p>
<p>
  <b>Especialidade</b>
  <%= @restaurante.especialidade %>
</p>
<p>
  <b>Foto:</b>
  <%= image_tag @restaurante.foto.url(:thumb) %>
</p>

<b>Nota média: <%= @restaurante.qualificacaos.average(:nota) %></b><br/>
<b>Qualificações: <%= @restaurante.qualificacaos.count %></b><br/>
<b>Preço médio: <%= @restaurante.qualificacaos.average(:valor_gasto) %></b><br/>


<%= link_to 'Editar', action: 'edit', id: @restaurante %>
<%= link_to 'Voltar', action: 'index' %>
<%= link_to 'Qualificar este restaurante', controller: "qualificacaos", action: "new", restaurante: @restaurante %>

<%= comentarios @restaurante %>
<%= novo_comentario @restaurante %>