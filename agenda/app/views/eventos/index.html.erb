<p id="notice"><%= notice %></p>

<h1>Listing Eventos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Local</th>
      <th>Inicio</th>
      <th>Termino</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @eventos.each do |evento| %>
      <tr>
        <td><%= evento.nome %></td>
        <td><%= evento.local %></td>
        <td><%= evento.inicio %></td>
        <td><%= evento.termino %></td>
        <td><%= link_to 'Show', evento, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_evento_path(evento), class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Destroy', evento, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_evento_path , class: 'btn btn-success' do%>
  <i class="glyphicon glyphicon-plus"></i>Novo Evento
<% end  %>
